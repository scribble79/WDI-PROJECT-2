<h2>Edit Video</h2>
<form class="pure-form pure-form-aligned" action="/videos/<%= @video.id %>" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="PUT">
  <fieldset>
    <div class="pure-control-group">
      <label for="video[video_name]">Video Name</label>
      <input name="video[video_name]" placeholder="Video Name" value="<%= @video.video_name %>">
    </div>
    <div class="pure-control-group">
      <label for="video[description]">Description</label>
      <textarea name="video[description]" placeholder="Description"><%= @video.video_name %></textarea>
    </div>
    <div class="pure-control-group">
      <label for="video[url]">URL</label>
      <input name="video[url]" placeholder="URL" value="<%= @video.url %>">
    </div>
    <div class="pure-control-group">
      <label for="video[url]">URL</label>
      <input name="video[url]" placeholder="URL" value="<%= @video.url %>" type="file">
    </div>
    <div class="pure-controls">
      <button type="submit" class="pure-button pure-button-primary">Edit Video</button>
    </div>
    <div class="pure-controls">
      <button class="pure-button pure-button-primary">Delete Video</button>
    </div>
  </fieldset>
</form>

