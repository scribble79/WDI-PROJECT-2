<h2><%= @video.video_name %></h2>
<div class="center">
  <video controls>
    <source class="pure-img" src="<%= @video.url.url %>" type="video/mp4">
  </video>
  <br>
  <a href="/videos/<%= @video.id %>/edit">Edit Video</a>

  <div class="pure-control-group">
    <p><%= @video.description %></p>
  </div>


  <h5>Comments</h5>
  <ul>
  <% @video.comments.each do |comment| %>
      <li><p><%= comment.comment %></p></li>
  <% end %>
  </ul>
</div>