<!DOCTYPE html>
<html lang="en">
<head>
  <%= css :application %>
  <%= js :application %>
</head>
  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Speak!</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
            <% if is_logged_in? %>
            <li><a href="/videos/<%= current_user.id %>">Upload</a></li>
              <li><a href="/users/<%= current_user.id %>">Profile Page</a></li>
              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/users/<%= current_user.id %>">Profile</a></li>
                  <li><a href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
                  <li><a href="/users/<%= current_user.id %>/delete">Delete Profile</a></li>
                  <li><a href="/logout">Logout</a></li>
                </ul>
              </li>
              <% else %>
              <li><a href="/register">Register</a></li>
              <li><a href="/login">Login</a></li>
              <% end %> 
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </header>
    <main class="container">
      <%= styled_flash %>
      <%= yield %>
    <main>
  </body>
</html