<!DOCTYPE html>
<html lang="en">
<head>
  <%= css :application %>
  <%= js :application %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
</head>
  <body>
    <header>

      <div class="pure-menu pure-menu-horizontal">
          <ul class="pure-menu-list">

          <form id="search-form" class="form-inline" action="/videos">
            <input type="text" name="search" placeholder="Search" value="<%= params[:search] %>" class="form-control">
            <button class="pure-button pure-button-primary">Search</button>
          </form>

              <li class="pure-menu-item pure-menu-selected"><a href="/" class="pure-menu-link">Speak!</a></li>
              <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
                  <a href="#" id="menuLink1" class="pure-menu-link">Contact</a>
                  <ul class="pure-menu-children">
                      <li class="pure-menu-item"><a href="/" class="pure-menu-link">Home</a></li>
                      <% if is_logged_in? %>
                        <li class="pure-menu-item"><a class="pure-menu-link" href="/videos/new">Upload</a></li>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/videos">Feed</a></li>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/users/<%= current_user.id %>">Profile</a></li>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/logout">Logout</a></li>
                      <% else %>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/register">Register</a></li>
                        <li class="pure-menu-item"><a class="pure-menu-link"  href="/login">Login</a></li>
                      <% end %> 
                  </ul>
              </li>
          </ul>
      </div>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </header>
    <main class="container">
      <%= styled_flash %>
      <%= yield %>
    <main>
  </body>
</html