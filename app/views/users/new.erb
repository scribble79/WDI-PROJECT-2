<h2>Register</h2>
<% @user.errors.full_messages.each do |error| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
  </div>
<% end %>
<form class="pure-form pure-form-aligned" id="register" method="post" action="/users">
  <div class="form-group">
    <label for="first_name">First name</label>
    <input name="user[first_name]" type="text" class="form-control" id="username" placeholder="First name" placeholder="First name">
  </div>
  <div class="form-group">
    <label for="last_name">Last name</label>
    <input name="user[last_name]" type="text" class="form-control" id="username" placeholder="Last name" placeholder="Last name">
  </div>
  <div class="form-group">
    <label for="username">Username</label>
    <input name="user[username]" type="text" class="form-control" id="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="user[email]" type="email" class="form-control" id="email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="profile_pic">Profile Pic</label>
    <input name="user[profile_pic]" type="file" class="form-control" id="profile_pic" placeholder="Profile Pic">
  </div>
  <button type="submit" class=class="pure-button pure-button-primary">Create</button>
</form>